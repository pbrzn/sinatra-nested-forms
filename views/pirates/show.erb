<h1>Pirate</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %> </h3>
  <h3>Weight: <%= @pirate.weight %> </h3>
  <h3>Height: <%= @pirate.height %> </h3>
</div>

<h2>Ships</h2>
<% @ships.each_with_index do |ship, i| %>
<div class="ship">
  <h3>Ship #<%= i + 1 %> </h3>
  <p>Name: <%= ship.name %> </p>
  <p>Type: <%= ship.type %> </p>
  <p>Booty: <%= ship.booty %> </p>
</div>
<% end %>
